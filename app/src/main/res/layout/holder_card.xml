<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/card_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_picture_height"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/concrete"/>
        <TextView
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_picture"
            android:text="Concrete est le nom d'un collectif parisien à l'origine de : Concrete (un club situé Port de la Rapée, connu pour ses fêtes le week-end qui commencent en journée), le label Concrete Music et le Weather Festival (dédié aux musiques électroniques) depuis 2013."
            android:layout_margin="@dimen/small_margin"/>
        <ImageButton
            android:id="@+id/card_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/small_margin"
            android:src="@mipmap/trash"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/card_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_toStartOf="@+id/card_delete"
            android:layout_margin="@dimen/small_margin"
            android:src="@mipmap/edit"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>